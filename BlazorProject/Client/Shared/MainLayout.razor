@inherits LayoutComponentBase
@Body

<script>
    let isReloading = false;

    window.addEventListener('beforeunload', function (e) {
        if (!isReloading) {
            localStorage.clear();
        }
    });

    window.addEventListener('unload', function (e) {
        if (!isReloading) {
            localStorage.clear();
        }
    });

    window.addEventListener('beforeunload', function (e) {
        isReloading = true;
    });
</script>